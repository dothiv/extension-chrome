{
    "name": ".hiv",
    "version": "0.1",
    "manifest_version": 2,
    
    "description": "Prepare your browser for the era of .hiv!",
    "icons": {
        "16": "dothiv16.png",
        "48": "dothiv48.png",
        "128": "dothiv128.png"                
    },
    
    "permissions": [
        "bookmarks",
        "http://hiv.enit.biz/"
    ],
    
    "browser_action": {
        "default_title": ".hiv",
        "default_icon": "ribbon.png",
        "default_popup": "popup.html"
    },
    
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://ajax.googleapis.com; object-src 'self' https://hiv.enit.biz"
}
