{
    "name": ".hiv Bookmarks",
    "version": "0.1",
    "manifest_version": 2,
    
    "description": "Prepare your browser bookmarks for the era of .hiv!",
    "icons": {
        "16": "app/img/dothiv16.png",
        "48": "app/img/dothiv48.png",
        "128": "app/img/dothiv128.png"
    },
    
    "permissions": [
        "bookmarks",
        "http://hiv.enit.biz/"
    ],
    
    "browser_action": {
        "default_title": ".hiv your bookmarks",
        "default_icon": "app/img/ribbon.png",
        "default_popup": "app/popup.html"
    },
    
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://ajax.googleapis.com; object-src 'self' https://hiv.enit.biz"
}
