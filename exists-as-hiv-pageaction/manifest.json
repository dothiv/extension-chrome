{
  "name": ".hiv Alternative",
  "version": "1.0",
  "description": "Shows an .hiv-alternative for urls which have a domain, registered at the .hiv-organization",
  "background": { "scripts": ["js/lib/require.js", "js/lib/qwest.js", "js/requirejsConfig.js", "js/chrome-page-action.js"] },
  "page_action" :
  {
    "default_icon" : "img/ribbon.png",
    "default_title" : "There exists a corresponding .hiv-page!"
  },
  "permissions" : [
    "tabs"
  ],
  "icons" : {
      "16": "img/dothiv16.png",
      "48": "img/dothiv48.png",
      "128": "img/dothiv128.png"
  },
  "manifest_version": 2
}
